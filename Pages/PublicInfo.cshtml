@page
@model DisasterAlleviationFoundation.Pages.PublicInfoModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Public Information</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #2e0269;
            color: white;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #2e0269;
            padding: 10px 0;
            text-align: center;
        }

            header a {
                text-decoration: none;
                color: white;
                margin: 0 15px;
                font-weight: bold;
            }

                header a:hover {
                    border-bottom: 2px solid #e0880b;
                }

        .container {
            max-width: 960px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            font-size: 36px;
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table, th, td {
            border: 1px solid white;
        }

        th, td {
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #e0880b;
        }

        .btn {
            background-color: #e0880b;
            color: white;
            padding: 5px 10px;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
        }

            .btn:hover {
                background-color: white;
                color: #e0880b;
            }
    </style>
</head>
<body>

    <div class="container">
        <h1>Public Information</h1>
        </br>
        </br>
        </br>
        <section id="totals" style="background-color: white; color: black; border-radius: 10px; padding: 20px;">
            <h2>Total Monetary Donations: R @Model.TotalAmount</h2>
            <h2>Total Goods Received: @Model.TotalGoodsReceived</h2>
        </section>
        </br>
        </br>

        <h2>Currently Active Disasters</h2>
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Location</th>
                    <th>Description</th>
                    <th>Required Aid Types</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var disasters in Model.listdisasters)
                {
                    <tr>
                        <td>@disasters.Id</td>
                        <td>@disasters.startDate</td>
                        <td>@disasters.endDate</td>
                        <td>@disasters.location</td>
                        <td>@disasters.description</td>
                        <td>@disasters.requiredAidTypes</td>
                    </tr>
                }
            </tbody>
        </table>
        </br>
        </br>

        <h2>Allocated Goods</h2>
        <table>
            <thead>
                <tr>
                    <th>Disaster Description</th>
                    <th>Goods Allocated</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.DisasterGoodsList)
                {
                    <tr>
                        <td>@item.DisasterDescription</td>
                        <td>@item.GoodsDescription</td>
                    </tr>
                }
            </tbody>
        </table>
        </br>
        </br>

        <h2>Allocated Money</h2>
        <table>
            <thead>
                <tr>
                    <th>Disaster Description</th>
                    <th>Money Allocated</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.DisasterMonetaryList)
                {
                    <tr>
                        <td>@item.DisasterDescription</td>
                        <td>@item.MonetaryDescription</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</body>
</html>

