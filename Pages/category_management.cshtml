@page
@model DisasterAlleviationFoundation.Pages.admin_category_managementModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Goods Categories Management</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #2e0269;
            color: white;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #2e0269;
            padding: 10px 0;
            text-align: center;
        }

            header a {
                text-decoration: none;
                color: white;
                margin: 0 15px;
                font-weight: bold;
                font-family: Arial;
                font-size: 35px;
            }

                header a:hover {
                    border-bottom: 2px solid #e0880b;
                    color: #e0880b;
                }

        .container {
            max-width: 960px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            font-size: 36px;
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table, th, td {
            border: 1px solid white;
        }

        th, td {
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #e0880b;
        }

        .btn {
            background-color: #e0880b;
            color: white;
            padding: 5px 10px;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
        }

            .btn:hover {
                background-color: white;
                color: #e0880b;
            }

        form {
            background-color: rgba(0, 0, 0, 0.6);
            padding: 20px;
            border-radius: 10px;
            margin-top: 20px;
        }

            form label {
                font-size: 18px;
                font-weight: bold;
            }

            form input[type="text"] {
                width: 100%;
                padding: 10px;
                margin: 5px 0;
                border: none;
                border-radius: 5px;
            }
    </style>
</head>
<body>
    <header>
        <a href="index">Logout</a>
        <a href="admin_main">Admin Page</a>
    </header>
    <div class="container">
        <h1>Goods Categories Management</h1>
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>CategoryName</th>
                </tr>
            </thead>
            <tbody>
@foreach (var categories in Model.listcategories)
                {
                    <tr>
                <td>@categories.Id</td>
                <td>@categories.CategoryName</td>
                    </tr>
}
                
            </tbody>
        </table>

        

        <form id="addNewCategory" method="post">
            @if (Model.errorMsg.Length > 0)
        {
                <div class="alert alert-danger" role="alert">
                    <strong>@Model.errorMsg</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>

        }
            <label for="newCategory">New Category:</label>
            <input type="text" id="CategoryName" name="CategoryName" value="@Model.addCategory.CategoryName" required>

            @if (Model.successMsg.Length > 0)
            {
                    <div class="alert alert-success" role="alert">
                        <strong>@Model.successMsg</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
            }
            <button type="submit" class="btn">Add Category</button>
        </form>
    </div>
</body>
</html>

